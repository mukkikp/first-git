<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_task.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :status, 'タイトル' %>
  <input type="text" class="form-control">
  <%= f.text_field :status %>

  <%= f.label :content, 'メッセージ' %>
  <input type="text" class="form-control">
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
  <input type="text" class="form-control">
<% end %>